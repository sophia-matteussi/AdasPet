@page
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http;
@model CadastroCompletoModel
@{
    ViewData["Title"] = "Complete seu cadastro";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-2">
        <section>
            <a href="~/Identity/Account/CadastroCompleto?tipo=cliente">
                <button class="btn btn-primary btn-primary-menor">Cliente</button>
            </a>
        </section>
    </div>
    <div class="col-md-2">
        <section>
            <a href="~/Identity/Account/CadastroCompleto?tipo=fornecedor">
                <button class="btn btn-primary btn-primary-menor">Lojista</button>
            </a>
        </section>
    </div>
    <div class="col-md-2">
        <section>
            <a href="~/Identity/Account/CadastroCompleto?tipo=entregador">
                <button class="btn btn-primary btn-primary-menor">Entregador</button>
            </a>
            <br />
        </section>
    </div>
    <div class="col-md-6"></div>
    <div class="col-md-6 col-md-offset-3">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                @{
                    if (Model.TipoCadastro == "cliente")
                    {
                        <div class="form-group">
                            <label asp-for="Input.Nome"></label>
                            <input asp-for="Input.Nome" class="form-control" />
                            <span asp-validation-for="Input.Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.CPF"></label>
                            <input asp-for="Input.CPF" class="form-control" />
                            <span asp-validation-for="Input.CPF" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.DataNascimento"></label>
                            <input asp-for="Input.DataNascimento" class="form-control" />
                            <span asp-validation-for="Input.DataNascimento" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Telefone"></label>
                            <input asp-for="Input.Telefone" class="form-control" />
                            <span asp-validation-for="Input.Telefone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Cep"></label>
                            <input asp-for="Input.Cep" class="form-control" />
                            <span asp-validation-for="Input.Cep" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.NumeroCasa"></label>
                            <input asp-for="Input.NumeroCasa" class="form-control" />
                            <span asp-validation-for="Input.NumeroCasa" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Complemento"></label>
                            <input asp-for="Input.Complemento" class="form-control" />
                            <span asp-validation-for="Input.Complemento" class="text-danger"></span>
                        </div>

                    }
                    else if (Model.TipoCadastro == "fornecedor")
                    {
                        <div class="form-group">
                            <label asp-for="Input.RazaoSocial">Razão Social</label>
                            <input asp-for="Input.RazaoSocial" class="form-control" />
                            <span asp-validation-for="Input.RazaoSocial" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.CNPJ"></label>
                            <input asp-for="Input.CNPJ" class="form-control" />
                            <span asp-validation-for="Input.CNPJ" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Telefone"></label>
                            <input asp-for="Input.Telefone" class="form-control" />
                            <span asp-validation-for="Input.Telefone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Cep"></label>
                            <input asp-for="Input.Cep" class="form-control" />
                            <span asp-validation-for="Input.Cep" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.NumeroCasa"></label>
                            <input asp-for="Input.NumeroCasa" class="form-control" />
                            <span asp-validation-for="Input.NumeroCasa" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Complemento"></label>
                            <input asp-for="Input.Complemento" class="form-control" />
                            <span asp-validation-for="Input.Complemento" class="text-danger"></span>
                        </div>
                    }
                    else if (Model.TipoCadastro == "entregador")
                    {
                        <div class="form-group">
                            <label asp-for="Input.Nome"></label>
                            <input asp-for="Input.Nome" class="form-control" />
                            <span asp-validation-for="Input.Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.CPF"></label>
                            <input asp-for="Input.CPF" class="form-control" />
                            <span asp-validation-for="Input.CPF" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.CNH"></label>
                            <input asp-for="Input.CNH" class="form-control" />
                            <span asp-validation-for="Input.CNH" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.DataNascimento"></label>
                            <input asp-for="Input.DataNascimento" class="form-control" />
                            <span asp-validation-for="Input.DataNascimento" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Telefone"></label>
                            <input asp-for="Input.Telefone" class="form-control" />
                            <span asp-validation-for="Input.Telefone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.TipoVeiculo">Tipo do Veiculo</label>
                            <select asp-for="Input.TipoVeiculo">
                                <option value="Moto">Moto</option>
                                <option value="Carro">Carro</option>
                            </select>
                            <span asp-validation-for="Input.TipoVeiculo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Placa"></label>
                            <input asp-for="Input.Placa" class="form-control" />
                            <span asp-validation-for="Input.Placa" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Renavam"></label>
                            <input asp-for="Input.Renavam" class="form-control" />
                            <span asp-validation-for="Input.Renavam" class="text-danger"></span>
                        </div>
                    }
                }
                <div class="form-group" , hidden="hidden">
                    <input asp-for="Input.Tipo" class="form-control" value="@Model.TipoCadastro" />
                    <span asp-validation-for="Input.Tipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Confirmar</button>
                </div>
                @{ 
                    if (!string.IsNullOrEmpty(Model.erro))
                    {
                       <h5 style="color: #fe1818 "> @Model.erro</h5>   
                    }
                }
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}